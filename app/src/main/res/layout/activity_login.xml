<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/primaryTextColor"

    tools:context=".Views.Ui.Activities.MainActivity">

    <ImageView
        android:layout_width="276dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_banner_foreground_tincho" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Iniciá Sesión"
        android:textColor="@color/secondaryColor"
        android:textSize="30dp" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:text="Email"
        android:layout_gravity="left"
        android:textColor="@color/secondaryColor"/>

    <EditText
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:background="@drawable/stylo_borde_editext"
        android:hint="usuario@ejemplo.com"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Contraseña"
        android:layout_gravity="left"
        android:textColor="@color/secondaryColor"/>

    <EditText
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="contraseña12345"
        android:background="@drawable/stylo_borde_editext"
        android:padding="10dp"
        android:password="true" />

    <Button
        android:id="@+id/BotonInicio"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:layout_marginTop="10dp"
        android:text="Entrar"
        android:textSize="18dp"
        android:textColor="@color/primaryTextColor"
        android:background="@color/secondaryDarkColor"
        />

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:context=".Views.Ui.Activities.MainActivity">


        <TextView
            android:id="@+id/BotonRecuperar"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Se olvidó la constraseña?"
            android:textColor="@color/secondaryColor"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/BotonRegistro"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="40dp"
            android:text="Registráte"
            android:textColor="@color/secondaryColor"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>